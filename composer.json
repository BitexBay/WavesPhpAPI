{
    "name": "devoldemar/WavesPhpAPI",
    "description": "PHP library to interact with Waves node and blockchain",
    "keywords": ["wavesnode", "wavesnode REST API", "waves DEX", "waves blockchain", "matcher"],
    "license": "MIT",
    "authors": [
         {
            "name": "Vladimir Vyatkin",
            "homepage": "https://github.com/devoldemar"
        }       
    ],
    "config": {
        "vendor-dir": "vendor"
    },
    "repositories": [
        {
           "type": "vcs",
           "url": "https://github.com/devoldemar/keccak"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "stephenhill/base58": "1.1.4",
        "ext-curve25519": "*",
        "ext-blake2": "*",
        "devoldemar/keccak": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Wavesapi\\": "src"
        }
    }
}
